<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VocaList.VocaRecyclerActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/voca_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/voca_list_item"
        android:layout_marginBottom="65dp"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_memorize"
            android:drawableTop="@drawable/ic_baseline_library_books_24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="암기하기"/>
        <Button
            android:id="@+id/btn_choice"
            android:drawableTop="@drawable/ic_baseline_check_box_24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="객관식 문제"/>
        <Button
            android:id="@+id/btn_spellcheck"
            android:drawableTop="@drawable/ic_baseline_spellcheck_24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="스펠링 맞추기"/>

    </LinearLayout>
</RelativeLayout>