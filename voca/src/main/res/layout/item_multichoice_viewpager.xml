<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <CheckBox
                android:buttonTint="#FF6E6E"
                android:id="@+id/memo_check_multi"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/count_multi"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/20"
                android:textSize="20dp"/>
            <CheckBox
                android:buttonTint="#FFE650"
                android:id="@+id/star_btn_multi"
                android:button="@drawable/imgbtn_states"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/ic_baseline_volume_up_24"
                android:id="@+id/tts_btn_multi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/voca_multi"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apple"
                android:textSize="40dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:textSize="30dp"
            android:id="@+id/btn1_multi"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/btn2_multi"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/btn3_multi"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/btn4_multi"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>

    </LinearLayout>
</RelativeLayout>